{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        // "airbnb-base"
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
        
    },
    "rules": {
    "quotes": ["error", "single"],
    "indent": ["error", 4],
    "semi": [2, "always"],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-console":0,
    "comma-dangle": ["error", "never"],
    "import/prefer-default-export": [0],
    "import/no-dynamic-require": [0],
    "no-underscore-dangle": ["off"]
    
    }
}
